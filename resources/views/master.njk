<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}{% endblock %} - Cinema City</title>
    <link rel="icon" href="favicon.png" type="image/x-icon">
    <link href="/datetimepicker/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/sandstone/bootstrap.min.css" rel="stylesheet" integrity="sha384-G3G7OsJCbOk1USkOY4RfeX1z27YaWrZ1YuaQ5tbuawed9IoreRDpWpTkZLXQfPm3" crossorigin="anonymous">
    <link href="/style.css" rel="stylesheet">
    <script type="text/javascript" src="/datetimepicker/jquery-1.8.3.min.js" charset="UTF-8"></script>
  </head>
 <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ 'main' | route }}">Cinema</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="{{ 'eloadasok_page' | route }}">Előadások böngészése</a></li>
            {% if currentUser.admin == 1 %}
              <li><a id="btnAddFilm" href="{{ 'film_create' | route }}">Film felvétele</a></li>
              <li><a href="{{ 'eloadas_create' | route }}">Előadás hirdetése</a></li>
              <li><a href="{{ 'check_registrations' | route }}">Regisztrációk megtekintése</a></li>
            {% endif %}
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {% if currentUser %}
            <li><a href="{{ 'profile' | route }}">Profil megtekintése</a></li>
            <li><a href="{{ 'do_logout' | route }}">Kilépés</a></li>
            {% else %}
            <li><a id="btnLogin" href="{{ 'login' | route }}">Belépés</a></li>
            <li><a id="btnRegister" href="{{ 'register' | route }}">Regisztráció</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
    <div class="app-container">
      <div class="container">
        {% block content %}{% endblock %}
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    
    <script src="/scripts/delete.js"></script>
    <script src="/scripts/elutasit.js"></script>
    <script src="/scripts/popup_login.js"></script>
    <script src="/scripts/popup_register.js"></script>
    <script src="/scripts/popup_addFilm.js"></script>
    <script type="text/javascript" src="/datetimepicker/bootstrap.min.js"></script>
    <script type="text/javascript" src="/datetimepicker/bootstrap-datetimepicker.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/datetimepicker/bootstrap-datetimepicker.hu.js" charset="UTF-8"></script>
    <script type="text/javascript">
      $('.form_datetime').datetimepicker({
          //language:  'fr',
          weekStart: 1,
          todayBtn:  1,
          autoclose: 1,
          todayHighlight: 1,
          startView: 2,
          forceParse: 0
      });
      $('.form_date').datetimepicker({
            language:  'fr',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
      $('.form_time').datetimepicker({
            language:  'fr',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 1,
            minView: 0,
            maxView: 1,
            forceParse: 0
        });
    </script>
    
    {% block scripts %}{% endblock %}
  </body>
</html>
