{% extends 'master' %}

{% block title %}Regisztráció{% endblock %}
{% block content %}
  <h1>Regisztráció</h1>
  <p>Foglalásait leadhatja a regisztráció, s annak visszaigazolása után.</p>
  {% if old('errors') %}
  <div class="alert alert-danger" role="alert">Sikertelen regisztrációs kísérlet:
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" action="{{ 'do_register' | route }}" method="POST" role="form" data-toggle="validator">
        {{ csrfField }}
        <div class="form-group has-feedback">
          <label for="inputEmail" class="col-sm-4 control-label">Felhasználónév</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputFelhasznalonev" name="felhasznalonev" placeholder="Felhasználónév" value="{{ old('username') }}" required>
          </div>
        </div>
        <div class="form-group has-feedback">
          <label for="inputNickname" class="col-sm-4 control-label">Megjelenített név</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputNickname" pattern="^[_A-z0-9]{1,}$" maxlength="30" name="nev" placeholder="Megjelenített név" value="{{ old('nickname') }}" required>
          </div>
        </div>
        <div class="form-group has-feedback">
          <label for="inputEmail" class="col-sm-4 control-label">E-mail cím</label>
          <div class="col-sm-8">
            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="E-mail cím" value="{{ old('email') }}" required>
          </div>
        </div>
        <div class="form-group has-feedback">
          <label for="inputPassword" class="col-sm-4 control-label">Jelszó</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" data-minlength="4" id="inputPassword" name="jelszo" placeholder="Jelszó" required>
          </div>
        </div>
        <div class="form-group has-feedback">
          <label for="inputPasswordAgain" class="col-sm-4 control-label">Jelszó ismét</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="inputPasswordAgain" name="jelszo_ujra" placeholder="Jelszó" required same:jelszo>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-success">Regisztráció</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}