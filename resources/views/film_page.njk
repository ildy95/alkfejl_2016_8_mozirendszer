{% extends 'master' %}

{% block scripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/co/4.1.0/index.min.js">
  <script src="/scripts/delete.js"></script>
{% endblock %}

{% block title %}{{ film.cim }}{% endblock %}
{% block content %}
  <h1>{{ film.cim }}</h1> 
  <div>
    {{ csrfField | safe }}
    {% if currentUser.admin == 1 %}
      <a class="btn btn-primary" href="{{ 'film_edit' | route({id: film.id}) }}">Film szerkesztése</a>
      <a class="btn btn-danger btn-delete" href="{{ 'film_delete' | route({id: film.id}) }}">Film törlése</a>
    <span class="help-block"></span>
  </div> 

  <div class="modal fade confirm-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
        <div class="modal-body">
          Biztosan törölni szeretnéd?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success modal-ok" data-dismiss="modal">OK</button>
          <button type="button" class="btn btn-danger modal-cancel" data-dismiss="modal">Mégse</button>
        </div>
      </div>
    </div>
  </div>

  {% endif %}
  {% if filmImage %}
  <img src="{{ filmImage }}">
  {% endif %}
    <h3>Műfaj</h3>
    <p>{{ film.mufaj }}</p>
    <h3>Hossz</h3>
    <p>{{ film.hossz }}</p>
    <h3>Korhatár</h3>
    <p>{{ film.korhatar }}</p>
    <h3>Rendező</h3>
    <p>{{ film.rendezo }}</p>
    <h3>Leírás</h3>
    <p>{{ film.leiras }}</p>
{% endblock %}
