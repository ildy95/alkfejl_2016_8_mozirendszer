{% extends 'master' %}

{% block title %}Kezd≈ëlap{% endblock %}
{% block content %}
  
 {% for filmBatch in films | batch(3) %}
  <div class="row">
    {% for film in filmBatch %}
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <a href="{{ 'film_page' | route({id: film.id}) }}" class="list-group-item">{{ film.cim }}</a> 
        </div>
        {% if recipeImage %}
          <img src="{{ recipeImage }}">
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
  {% endfor %}
{% endblock %}
